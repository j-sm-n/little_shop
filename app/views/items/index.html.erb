
<h1>Items</h1>

<% @items.each do |item| %>
  <div class="<%= item.title %>">

  <p>
    <%= item.title %>
  </p>

  <p>
    <%= image_tag item.image_path %>
  </p>

  <p>
    <%= item.description %>
  </p>

  <p>
    <%= item.price %>
  </p>
  <div class="cart">
    <!-- <%= button_to "cart", cart_path, method: :get %> -->
  </div>

  <%= button_to "Add to Cart", cart_path(:item_id => item.id) %>
</div>
<% end %>
