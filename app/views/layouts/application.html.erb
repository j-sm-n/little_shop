<!DOCTYPE html>
<html>
  <head>
    <title>Good Grocer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href= "<%= items_path %>">GoodGrocer</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="<%= items_path %>" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Shop <span class="caret"></span></a>
              <% if all_categories %>
                <ul class="dropdown-menu">
                  <% all_categories.each do |category| %>
                    <li><a href="/<%= category.slug %>"><%= category.name %></a></li>
                  <% end %>
                </ul>
              <% end %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li class="navbar-brand">Logged in as <%= current_user.username %></li> <!-- <= Need to figure out how to fix this -->
              <li><%= link_to "Logout", logout_path %></li>
            <% else %>
              <li><%= link_to "Login", login_path %></li>
            <% end %>
            <li><a href="<%= cart_path  %>" id="cart_link"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
            <li class="dropdown">
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

  <% flash.each do |type, message| %>
      <%= content_tag :div, message.html_safe, class: "flash_#{type}" %>
    <% end %>

    <div class="container" id=yield-container>
      <%= yield %>
    </div>

  </body>
</html>
