<% @items.each do |item| %>

  <img src="<%= item.image_path %>" alt="Item" style="width:100px;height:80px;">

  <p>Title: <%= item.title %></p>
  <p>Description: <%=item.description%></p>
  <p>Price: <%= item.price %></p>
  <p>Subtotal: <%= cents_to_dollar item.price * @cart.quantity(item.id) %></p>
  <p>
    <%= form_for :cart, method: :patch do |f| %>
      <%= f.hidden_field :item_id, value: item.id %>
      <%= f.label :quantity %>
      <%= f.number_field :quantity, value: @cart.quantity(item.id), min: 1 %>
      <%= f.submit "Update" %>
    <% end %>
  </p>
  <%= button_to "Remove", cart_path(item_id: item.id), method: :delete%>
<% end %>

<p>Total: <%= cents_to_dollar @cart.total_price %></p>
