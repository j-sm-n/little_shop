<% @items.each do |item| %>

<img src="<%= item.image_path %>" alt="Item" style="width:100px;height:80px;">

  <p>Title: <%= item.title %></p>
  <p>Description: <%=item.description%></p>
  <p>Price: <%= item.price %></p>

  <%= button_to "Delete Item", cart_path(item_id: item.id), method: :delete%>
<% end %>

<p>Total Price: <%=  @cart.total_price %></p>
