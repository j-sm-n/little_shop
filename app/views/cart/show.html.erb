<% @items.each do |item| %>
<div class ="row">
  <div class="col-md-4">
    <img src="<%= item.image_path %>" alt="Item" class="img-responsive" style="width:200px;height:150px;margin-top:30px;">
  </div>

  <div class="col-md-8" style="margin-bottom:20px;">
    <h3><%= item.title %></h3>
    <p>Description: <%=item.description%></p>
    <p>Price: <%= cents_to_dollar item.price %></p>
    <p>Subtotal: <%= cents_to_dollar @cart.item_subtotal(item.id) %></p>
    <p>
      <%= form_for :cart, method: :patch do |f| %>
        <%= f.hidden_field :item_id, value: item.id %>
        <%= f.label :quantity %>
        <%= f.number_field :quantity, value: @cart.quantity(item.id), min: 1 %>
        <%= f.submit "Update", class: 'btn btn-outline-primary' %>
      <% end %>
    </p>
    <%= button_to "Remove", cart_path(item_id: item.id), method: :delete, class: 'btn btn-danger' %>
  </div>
</div>
<% end %>

<% if cart_full? %>
  <div class="row text-right well">
    <h3>Total: <%= cents_to_dollar @cart.total_price %></h3>
    <% if current_user %>
      <%= button_to "Checkout", orders_path, class: "btn btn-primary btn-lg" %>
    <% else %>
      <p>
        <%= link_to "Login", login_path, id: "checkout-login" %>
        or
        <%= link_to "Create Account", new_user_path %>
        to Checkout
      </p>
    <% end %>
  </div>
<% else %>
  <div class="row text-center well">
    <p>Your cart is empty.</p>
    <p><%= link_to "Start shopping!", items_path %></p>
  </div>
<% end %>
