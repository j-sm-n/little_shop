<table class="table">
  <thead>
    <tr>
      <td>Order #</td>
      <td>Status</td>
      <td>Action</td>
    </tr>

  </thead>
  <tbody>
    <% orders.each_with_index do |order, index| %>
    <tr>
      <td> <%= link_to "##{index + 1}", order %></td>
      <td> <%= order.status %> </td>
      <td> <% if order.status == 'paid' || order.status == 'ordered' %>
           <%= link_to "Cancel", admin_edit_order_status_path(status: "cancelled", order_id: order.id), method: :patch  %>
           <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
