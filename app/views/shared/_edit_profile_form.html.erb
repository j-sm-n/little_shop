<div class="container-fluid">
  <%= form_for(@user, url: user_path) do |f| %>

  <div class="container-fluid">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="container-fluid">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br>
  </div>

  <div class="container-fluid">
    <%= f.label :street_address %>
    <%= f.text_field :street_address%><br>
  </div>

  <div class="container-fluid">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="container-fluid">
    <%= f.label :state %>
    <%= render partial: "shared/state_dropdown" %><br />
  </div>

  <div class="container-fluid">
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %><br>
  </div>

  <div class="form-group">
    <%= f.label :user_image %>
    <%= f.text_field :user_image, class: "form-control", type: "url" %><br>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %><br>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control" %><br>
  </div>

  <div class="form-group">
    <%= f.label :gender %>
    <%= f.select(:gender, options_for_select([['Female', 'Female'], ['Male', 'Male'], ['Transgender', 'Transgender'], ['Other', 'Other'], ['Prefer Not To Say', 'Prefer Not To Say']], 1)) %><br>
  </div>

  <%= f.submit "Update Information", class: "btn btn-primary" %>

  <% end %>
</div>
