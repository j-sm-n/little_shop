<div class="container" style="margin-top:50px;margin-bottom:200px;">
  <div class="container">

    <ol class="breadcrumb">
      <li class="active">Dashboard</a></li>
    </ol>

    <div class="page-header">
      <h1>Admin Dashboard</h1>
    </div>

  <div class="container">
    <p>Profile Image:</p> <%=image_tag @user.user_image, class: "img-thumbnail", style: "margin-bottom:20px;" %><br>
    <p><%= formatted_name(@user) %></p><br>

    <p><%= formatted_address(@user) %></p><br>

    <p><%= @user.gender %></p>
  </div>

  <%= button_to "Update Profile", admin_edit_dashboard_path, method: :get, class: "btn btn-success btn-lg" %><br>
  <%= button_to "View All Items", admin_items_path, method: :get, class: "btn btn-primary btn-lg" %><br>

  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= button_to "Open Orders", '/admin/dashboard/ordered', method: :get, class: "btn btn-info" %>
      </div>

      <div class="col-md-3">
        <%= button_to "Paid Orders", '/admin/dashboard/paid', method: :get, class: "btn btn-info" %>
      </div>

      <div class="col-md-3">
        <%= button_to "Completed Orders", '/admin/dashboard/completed', method: :get, class: "btn btn-info" %>
      </div>

      <div class="col-md-3">
        <%= button_to "Cancelled Orders", '/admin/dashboard/cancelled', method: :get, class: "btn btn-info" %>
      </div>
    </div>
  </div>

  <%= render partial: "order_table", locals: { orders: @orders } %>
</div>
</div>
