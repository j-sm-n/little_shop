<div class="container" style="margin-top:50px;margin-bottom:100px;">

  <ol class="breadcrumb">
    <li><a href="/admin/dashboard">Dashboard</a></li>
    <li><a href="/admin/dashboard/items">All Items</a></li>
    <li class="active"><%= @item.title %></a></li>
  </ol>

  <div class="page-header">
    <h1>Edit Item Information</h1>
  </div>

  <div class="container-fluid">
    <div class="well">

      <%= form_for(@item, url: admin_update_item_path) do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %><br>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %><br>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: "form-control" %><br>
      </div>

      <div class="form-group">
        <%= f.label :image_path %>
        <%= f.text_field :image_path, class: "form-control" %><br>
      </div>

      <div class="form-group">
        <%= f.label :long_description %>
        <%= f.text_field :long_description, class: "form-control" %><br>
      </div>

      <%= f.submit "Update Item", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
