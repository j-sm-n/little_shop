<div class="container" style="margin-top:50px;margin-bottom:200px;">
  <div class="container">

    <div class="page-header">
      <h1><%= current_user.username.capitalize %>'s Dashboard</h1>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag current_user.user_image, class: "img-responsive", style: "margin-bottom:20px;" %>
      </div>
      <div class="col-md-8">

        <p><%= formatted_name(current_user) %></p><br>

        <p><%= formatted_address(current_user) %></p><br>

        <p><%= current_user.gender %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <%= button_to "Edit Profile", edit_user_path(current_user), method: :get, class: "btn btn-info btn-lg" %>

        <%= button_to "View Past Orders", orders_path, method: :get, class: "btn btn-success btn-lg" %>
      </div>
    </div>
  </div>
</div>
